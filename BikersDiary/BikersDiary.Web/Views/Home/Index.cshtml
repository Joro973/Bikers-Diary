<hr />
<div class="row">
    @{
        var i = 0;
        foreach (var post in Model)
        {
            if (i >= 6)
            {
                break;
            }
            <div class="col-md-4">
                <h2>@post.Title</h2>
                <p>@post.Content</p>
                <p>@post.PostedOn - @post.AuthorEmail</p>          
                @Html.ActionLink("Details", "Details", "Forum", new { id = post.Id }, new {@class = "btn btn-default"})
            </div>
            i++;
        }
    }
</div>

