@using Microsoft.AspNet.Identity
@model TelerikAcademy.ForumSystem.Data.Model.Post
@{
    ViewBag.Title = "Add new post";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    @Html.LabelFor(p => p.Title)
    @Html.EditorFor(p => p.Title)
    @Html.ValidationMessageFor(p => p.Title)

    @Html.LabelFor(p => p.Content)
    @Html.TextAreaFor(p => p.Content)


    <input type="submit" class="btn btn-success" value="Add" id="addPost" />
}