@model TelerikAcademy.ForumSystem.Web.Models.Home.PostViewModel
@{
    ViewBag.Title = "Details";
}


<div class="col-sm-12">
    <div class="panel">
        <div class="panel-heading">
            <h2>@Model.Title</h2>
        </div>
        <div class="panel-body">
            <div class="row">
                <p>@Model.Content</p>
            </div>
        </div>
        <div class="panel-footer">
            <small>@Model.AuthorEmail - @Model.PostedOn</small>
        </div>
    </div>
    
    <div class="row">
        
        <textarea></textarea>
        
        @using (Html.BeginForm("AddComment", "Forum", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            if (this.User.Identity.IsAuthenticated)
            {
                <input type="submit" class="btn btn-success" value="Add" id="addComment"/>
            }
            else
            {
                <input type="submit" class="btn btn-default" value="Add" id="addComment" style="pointer-events: none; cursor: default"/>
            }
        }
    </div>
</div>
@Html.Partial("_CommentPartial", Model)
